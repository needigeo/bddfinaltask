			Или ВРег(Слово) = ВРег("Дано:")
			Или ВРег(Слово) = ВРег("Пусть:")
			Или ВРег(Слово) = ВРег("Сценарий:")
			Или ВРег(Слово) = ВРег("То:")
			Или ВРег(Слово) = ВРег("Тогда:")
			Или ВРег(Слово) = ВРег("Если:")
			Или ВРег(Слово) = ВРег("Когда:")
			Тогда
			
			ДанныеСтроки.Вставить("ЭтоШаг");
			ДанныеСтроки.Вставить("КлючевоеСлово", Слово);
			
		Иначе
			Пробел = СтрНайти(ТекущаяСтрока, " ");
			
			ДваСлова = Слово + " " + Лев(ТекущаяСтрока, Пробел - 1);
			
			ТекущаяСтрока = СокрЛП(Сред(ТекущаяСтрока, Пробел));
			
			Если Ложь
				Или ВРег(ДваСлова) = ВРег("Я хочу")
				Или ВРег(ДваСлова) = ВРег("Структура сценария")
				Или ВРег(ДваСлова) = ВРег("Я хочу:")
				Или ВРег(ДваСлова) = ВРег("Структура сценария:")
				Тогда
				
				ДанныеСтроки.Вставить("ЭтоШаг");
				ДанныеСтроки.Вставить("КлючевоеСлово", ДваСлова);
				
			Иначе
				Пробел = СтрНайти(ТекущаяСтрока, " ");
				
				ТриСлова = ДваСлова + " " + Лев(ТекущаяСтрока, Пробел - 1);
				
				ТекущаяСтрока = СокрЛП(Сред(ТекущаяСтрока, Пробел));
				
				Если Ложь
					Или ВРег(ДваСлова) = ВРег("К тому же")
					Или ВРег(ДваСлова) = ВРег("К тому же:")
					Тогда
					
					ДанныеСтроки.Вставить("ЭтоШаг");
					ДанныеСтроки.Вставить("КлючевоеСлово", ТриСлова);
					
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЕсли;
	
	ДанныеСтроки.Вставить("ОставшийсяТекст", ТекущаяСтрока);
	ДанныеСтроки.Вставить("СимволОкончания", Прав(ТекущаяСтрока, 1));
	
	Возврат ДанныеСтроки;
КонецФункции

