&НаСервере
Функция ПолучитьHTMLИзТекстовогоДокумента(ТекстовыйДокумент, Каталог)
	Текст = 
	"<html>
	|<head>
	|#Голова
	|</head>
	|<body>
	|#Тело
	|</body>
	|</html>";
	
	Заголовок = "";
	
	Голова = 
	"<meta charset=""utf-8"">
	|<title>" + Заголовок + "</title>
	|<style>
	|p {
	|font-family: 'Lucida Console'
	|line-height: 0.1;
	|}
	|</style>";
	
	Текст = СтрЗаменить(Текст, "#Голова", Голова);
	
	Тело = "";
	
	СтрокиТаблицы = "";
	
	ВсегоСтрок = ТекстовыйДокумент.КоличествоСтрок();
	Для НомерСтроки = 1 По ВсегоСтрок Цикл
		ТекущаяСтрока = ТекстовыйДокумент.ПолучитьСтроку(НомерСтроки);
		
		ДанныеСтроки = ПолучитьДанныеСтроки(ТекущаяСтрока);
		Если ДанныеСтроки.Свойство("ЭтоПустаяСтрока") Тогда
			Продолжить;
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоКомментарий") Тогда
			Строка = "<p>" + "<font color=""gray"">" + ДанныеСтроки.ТекущаяСтрока + "</font>" + "</p>";
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоТег") Тогда
			Строка = "<p>" + "<font color=""red"">" + ДанныеСтроки.ТекущаяСтрока + "</font>" + "</p>";
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоИзображение") Тогда
			Строка = "<p>" + "<img src=" + ОбернутьВКавычки(Каталог + "\" + ДанныеСтроки.Изображение.Адрес) + " alt=" + ОбернутьВКавычки(ДанныеСтроки.Изображение.Текст) + ">" + "</p>";
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоСсылка") Тогда
			Строка = "<p>" + "<a href=" + ДанныеСтроки.ВнешняяСсылка.Адрес + ">" + ДанныеСтроки.ВнешняяСсылка.Текст + "</a>" + "</p>";
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоТаблица") Тогда
			ЯчейкаТаблицы = "";
			Для Каждого Ячейка Из ДанныеСтроки.Ячейки  Цикл
				ЯчейкаТаблицы = ЯчейкаТаблицы +
				"<td>" + Ячейка + "</td>
				|";
				
			КонецЦикла;
			
			СтрокиТаблицы = СтрокиТаблицы +
			"<tr>
			|" + ЯчейкаТаблицы + 
			"</tr>";
			
			Продолжить;
			
		ИначеЕсли ДанныеСтроки.Свойство("ЭтоШаг") Тогда
			Строка = "<p>" + "<font color=""green"">" + ДанныеСтроки.КлючевоеСлово + "</font>" +  " " + ДанныеСтроки.ОставшийсяТекст + "</p>";
			
			Если ДанныеСтроки.КоличествоОтступов > 0 Тогда
				Для Счетчик = 1 По ДанныеСтроки.КоличествоОтступов Цикл
					Строка = "<blockquote>" + Строка + "</blockquote>"; 							
					
				КонецЦикла;
			КонецЕсли;
		КонецЕсли;
		
		Если Не ПустаяСтрока(СтрокиТаблицы) Тогда
			Таблица = 
			"<table border=""1"">
			|" + СтрокиТаблицы +
			"</table>";
			
			Тело = Тело + Таблица + Символы.ПС;
			
			СтрокиТаблицы = "";
		КонецЕсли;
		
		Тело = Тело + Строка + ?(НомерСтроки = ВсегоСтрок, "", Символы.ПС);
	КонецЦикла;
	
	Если Не ПустаяСтрока(СтрокиТаблицы) Тогда
		Таблица = 
		"<table border=""1"">
		|" + СтрокиТаблицы +
		"</table>";
		
		Тело = Тело + Таблица + Символы.ПС;
		
		СтрокиТаблицы = "";
	КонецЕсли;
	
	Текст = СтрЗаменить(Текст, "#Тело", Тело);
	
	Возврат Текст;
КонецФункции

&НаСервере
Функция ПолучитьДанныеСтроки(Знач ИсходнаяСтрока)
	ДанныеСтроки = Новый Структура;
	
	КоличествоОтступов = ПолучитьКоличествоОтступов(ИсходнаяСтрока);
	ДанныеСтроки.Вставить("КоличествоОтступов", КоличествоОтступов);
	
	ТекущаяСтрока = ПолучитьСтрокуБезПробеловИОтступов(ИсходнаяСтрока);
	Если ПустаяСтрока(ТекущаяСтрока) Тогда
		ДанныеСтроки.Вставить("ЭтоПустаяСтрока");
		
		Возврат ДанныеСтроки;
	КонецЕсли;
	
	//*
	Разделитель = СтрНайти(ТекущаяСтрока, "](");
	Если Разделитель > 0 Тогда
		Если Лев(ТекущаяСтрока, 2) = "![" Тогда
			ДанныеСтроки.Вставить("ЭтоИзображение");
			
			Изображение = Новый Структура;
			
			Текст = Сред(ТекущаяСтрока, 3, Разделитель - 3);
			Изображение.Вставить("Текст", Текст);
			
			ВсегоСимволов = СтрДлина(ТекущаяСтрока);
			
			Адрес = Сред(ТекущаяСтрока, Разделитель + 2, ВсегоСимволов - (Разделитель + 2));
			Изображение.Вставить("Адрес", Адрес);
			
			ДанныеСтроки.Вставить("Изображение", Изображение);
			
		ИначеЕсли Лев(ТекущаяСтрока, 1) = "[" Тогда
			ДанныеСтроки.Вставить("ЭтоСсылка");
			
			ВнешняяСсылка = Новый Структура;
			
			Текст = Сред(ТекущаяСтрока, 2, Разделитель - 2);
			ВнешняяСсылка.Вставить("Текст", Текст);
			
			ВсегоСимволов = СтрДлина(ТекущаяСтрока);
			
			Адрес = Сред(ТекущаяСтрока, Разделитель + 2, ВсегоСимволов - (Разделитель + 2));
			ВнешняяСсылка.Вставить("Адрес", Адрес);
			
			ДанныеСтроки.Вставить("ВнешняяСсылка", ВнешняяСсылка);
			
		Иначе
			ДанныеСтроки.Вставить("ЭтоПустаяСтрока");
			
			Возврат ДанныеСтроки;
			
		КонецЕсли;
	КонецЕсли;
	//*
	
	ДанныеСтроки.Вставить("ТекущаяСтрока", ТекущаяСтрока);
	
	Символ = Лев(ТекущаяСтрока, 1);
	ДанныеСтроки.Вставить("СимволНачала", Символ);
	
	Пробел = СтрНайти(ТекущаяСтрока, " ");
	Если Пробел = 0 Тогда
		Слово = ТекущаяСтрока;
		
		ТекущаяСтрока = "";
		
	Иначе
		Слово = Лев(ТекущаяСтрока, Пробел - 1);
		
		ТекущаяСтрока = СокрЛП(Сред(ТекущаяСтрока, Пробел));
		
	КонецЕсли;
	
	Если Символ = "#" Тогда
		ДанныеСтроки.Вставить("ЭтоКомментарий");
		
	ИначеЕсли Символ = "@" Тогда
		ДанныеСтроки.Вставить("ЭтоТег");
		
	ИначеЕсли Символ = "|" Тогда
		ДанныеСтроки.Вставить("ЭтоТаблица");
		
		ИсходнаяСтрока = ПолучитьСтрокуБезПробеловИОтступов(ИсходнаяСтрока);
		
		ИсходнаяСтрока = Сред(ИсходнаяСтрока, 2);
		
		Ячейки = Новый Массив;
		
		ВсегоРазделителей = СтрЧислоВхождений(ИсходнаяСтрока, "|");
		Для Счетчик = 1 По ВсегоРазделителей Цикл
			Разделитель = СтрНайти(ИсходнаяСтрока, "|");
			
			Значение = ПолучитьСтрокуБезПробеловИОтступов(Лев(ИсходнаяСтрока, Разделитель - 1));
			
			Ячейки.Добавить(Значение);
			
			ИсходнаяСтрока = ПолучитьСтрокуБезПробеловИОтступов(Сред(ИсходнаяСтрока, Разделитель+1));
		КонецЦикла;		
		
		ДанныеСтроки.Вставить("Ячейки", Ячейки);
		
	Иначе
		Если Ложь
			Или ВРег(Слово) = ВРег("Как")
